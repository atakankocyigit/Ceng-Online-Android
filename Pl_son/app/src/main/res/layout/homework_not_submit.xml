<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/course_name"
        android:layout_width="269dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/not_finish"
        android:scrollbars="vertical"
        android:text="(X)"
        android:textColor="#E4D9D9"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/course_name"
        android:layout_marginBottom="-23dp" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/course_name"
        android:layout_toRightOf="@+id/course_name"
        app:srcCompat="@android:drawable/ic_delete" />
</RelativeLayout>