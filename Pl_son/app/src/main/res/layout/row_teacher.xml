<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/course_name"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="6dp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/course_button"
        android:scrollbars="vertical"
        android:textColor="#E4D9D9"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/course_name"
        android:layout_marginBottom="-19dp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="49dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/course_name"
        android:layout_alignRight="@+id/course_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="-71dp"
        android:layout_marginRight="-71dp"
        android:background="@drawable/delete" />


</RelativeLayout>